{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    },
    {
      "name": "release/**",
      "prerelease": "rc"
    }
  ],
  "repositoryUrl": "https://github.com/bubaley/domaestro",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "scope": "no-release",
            "release": false
          }
        ],
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "üöÄ Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            },
            {
              "type": "style",
              "section": "üíÑ Styles"
            },
            {
              "type": "refactor",
              "section": "‚ôªÔ∏è Code Refactoring"
            },
            {
              "type": "perf",
              "section": "‚ö° Performance Improvements"
            },
            {
              "type": "test",
              "section": "‚úÖ Tests"
            },
            {
              "type": "build",
              "section": "üë∑ Build System"
            },
            {
              "type": "ci",
              "section": "üîß Continuous Integration"
            },
            {
              "type": "chore",
              "section": "üî® Chores"
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [Conventional Commits](https://conventionalcommits.org) for commit guidelines."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "üéâ This issue has been resolved in version ${nextRelease.version}. The release is available on [GitHub release](<github_release_url>)",
        "failComment": "‚ùå The release from branch ${branch.name} had failed due to the following errors:\n- ${errors.map(err => err.message).join('\\n- ')}",
        "releasedLabels": [
          "released<%= nextRelease.channel ? ` on @${nextRelease.channel}` : \"\" %> as <%= nextRelease.version %>"
        ],
        "addReleases": "bottom"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
} 